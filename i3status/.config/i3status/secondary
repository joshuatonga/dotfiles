general {
        colors = true
        interval = 5
}

order += "path_exists DND"
order += "tztime utc"
order += "tztime local"

path_exists DND {
  path = /tmp/dnd_status.txt
  format = "DO NOT DISTURB!!!   "
  format_down = ""
  color_good = "#FF0000"
}

tztime local {
        format = "%Y/%m/%d %H:%M"
}

tztime utc {
        format = "UTC %d %H:%M"
        timezone = "UTC"
}
