[public_ip]
command=curl -s ifconfig.me | xargs echo
interval=60
label=IP: 
color=#027806

[k10temp]
command=sensors 2>/dev/null | awk '/^Tctl:/{gsub(/[^0-9.]/,"",$2); print $2 "Â°C"}'
interval=10
label=CPU Temp: 

# Block for displaying UTC time
[tztime_utc]
command=date -u '+UTC %Y/%m/%d %H:%M'
interval=5

# Block for displaying local time
[tztime_local]
command=date '+UTC+8 %Y/%m/%d %H:%M'
interval=5
